{
    "name": "travel-blogs",
    "version": "1.0.0",
    "description": "Users should be able to post their travel diaries",
    "license": "ISC",
    "author": "Geneka",
    "type": "module",
    "main": "app.js",
    "scripts": {
        "start": "node --env-file=.env.production --experimental-transform-types app.js",
        "dev": "node --env-file=.env --experimental-transform-types --watch app.js",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "db:sync": "npx prisma db pull & npx prisma generate",
        "sql": "npx prisma migrate diff  --from-empty  --to-schema prisma/schema.prisma --script > prisma/migrations/migration.sql"
    },
    "dependencies": {
        "@prisma/adapter-mariadb": "^7.3.0",
        "@prisma/client": "^7.3.0",
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.6",
        "express": "^5.2.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.3",
        "multer": "^2.0.2",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@eslint/js": "^10.0.1",
        "eslint": "^10.0.0",
        "globals": "^17.3.0",
        "prettier": "^3.8.1",
        "prisma": "^7.3.0"
    },
    "imports": {
        "#controllers/*": "./src/controllers/*.js",
        "#middlewares/*": "./src/middlewares/*.js",
        "#routes/*": "./src/routes/*.js",
        "#services/*": "./src/services/*.js",
        "#validations/*": "./src/validations/*.js",
        "#db": "./src/config/db.js",
        "#utils/*": "./src/utils/*.js"
    }
}
